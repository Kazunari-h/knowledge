{
    "name": "knowledge",
    "private": true,
    "sideEffects": false,
    "type": "module",
    "scripts": {
        "db:studio": "dotenv -e .dev.vars -- prisma studio",
        "db:migrate": "dotenv -e .dev.vars -- prisma migrate dev",
        "db:push": "dotenv -e .dev.vars -- prisma db push",
        "build": "remix build",
        "deploy": "wrangler deploy",
        "dev": "remix dev --manual -c \"npm start\"",
        "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
        "start": "wrangler dev ./build/index.js",
        "typecheck": "tsc"
    },
    "dependencies": {
        "@clerk/remix": "^3.1.18",
        "@cloudflare/kv-asset-handler": "^0.1.3",
        "@conform-to/react": "^1.0.1",
        "@conform-to/zod": "^1.0.1",
        "@prisma/client": "^5.9.1",
        "@radix-ui/react-popover": "^1.0.7",
        "@radix-ui/react-slot": "^1.0.2",
        "@remix-run/cloudflare": "^2.6.0",
        "@remix-run/css-bundle": "^2.6.0",
        "@remix-run/react": "^2.6.0",
        "algoliasearch": "^4.22.1",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.0",
        "i18next": "^23.8.2",
        "isbot": "^4.1.0",
        "lucide-react": "^0.323.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-instantsearch": "^7.5.5",
        "tailwind-merge": "^2.2.1",
        "tailwindcss-animate": "^1.0.7",
        "zod": "^3.22.4",
        "zod-i18n-map": "^2.27.0"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20230518.0",
        "@remix-run/dev": "^2.6.0",
        "@types/react": "^18.2.20",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "dotenv-cli": "^7.3.0",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "prettier": "^3.2.5",
        "prisma": "^5.9.1",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.1.6",
        "wrangler": "^3.24.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
